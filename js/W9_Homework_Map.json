{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GDP per Capita of World Countries 2024",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/bernicecck0412/W9_Homework/refs/heads/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/bernicecck0412/W9_Homework/main/data/World_GDP_per_capita.csv"
        },
        "key": "Country Name",
        "fields": ["2024"]
      }
    },
    {
      "calculate": "datum['2024']", "as": "GDP per capita (US$)"
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "field": "GDP per capita (US$)",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [10000, 20000, 30000, 40000, 50000],
        "range": ["#A2D9CE", "#73C6B6", "#45B39D", "#17A589", "#117864", "#0B5345"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "GDP per capita (US$)", "type": "quantitative", "format": ".2f", "title": "GDP per capita (US$)"}
    ]
  }
}
